#include "main.h"


/**
 * _sqrt_recursion - calculates the square root of an int
 *
 *@n: An integer
 *
 * Return: returns the square root of an int or -1 if square root is not natural
 */

int _pow_recursion(int x, int y)
{
	if (y < 0)
		return (-1);
	if (y == 0)
		return (1);
	return (x * (_pow_recursion(x, --y)));
}
